// Test: True condition returns the 'then' block
assert (if (true) "TrueBranch" else "FalseBranch") == "TrueBranch";

// Test: False condition returns the 'else' block
assert (if (false) "TrueBranch" else "FalseBranch") == "FalseBranch";

// Test: Nested logic
// Logic: if(true) -> enters block -> if(false) -> skips -> else -> returns "InnerElse"
assert (
    if (true)
        if (false) "InnerIf" else "InnerElse"
    else
        "OuterElse"
) == "InnerElse";

// Test: Chained conditions
var result = if (false) {
    "A";
} else if (true) {
    "B";
} else {
    "C";
};

assert result == "B";

