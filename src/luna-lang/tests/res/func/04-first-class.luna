// Function as Value Tests

// Test: Assign function to variable
var f = fn(x) { x * 2 };
var g = f;
assert g(5) == 10;

// Test: Function in table
var obj = {
    double: fn(x) { x * 2 },
    add: fn(a, b) { a + b }
};
assert obj.double(5) == 10;
assert obj.add(2, 3) == 5;

// Test: Function in list
var funcs = [
    fn(x) { x + 1 },
    fn(x) { x * 2 },
    fn(x) { x - 1 }
];
assert funcs[0](5) == 6;
assert funcs[1](5) == 10;
assert funcs[2](5) == 4;

// Test: Function passed as argument
var apply = fn(f, x) { f(x) };
var addOne = fn(x) { x + 1 };
assert apply(addOne, 5) == 6;

// Test: Function returned from function
var makeAdder = fn(n) {
    fn(x) { x + n };
};
var add5 = makeAdder(5);
assert add5(10) == 15;
assert add5(0) == 5;

#pass
