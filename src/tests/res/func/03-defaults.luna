// Function Default Parameters Tests

// Test: Function with default parameter
var greet = fn(name: "World") { name };
assert greet() == "World";
assert greet("Alice") == "Alice";

// Test: Multiple parameters with some defaults
var power = fn(base, exp: 2) { 
    var result = 1;
    var i = 0;
    // Simple power for small exponents
    if (exp == 0) {
        result = 1;
    } else if (exp == 1) {
        result = base;
    } else if (exp == 2) {
        result = base * base;
    } else if (exp == 3) {
        result = base * base * base;
    };
    result;
};
assert power(3) == 9;
assert power(3, 2) == 9;
assert power(2, 3) == 8;

// Test: All parameters with defaults
var config = fn(a: 1, b: 2, c: 3) { a + b + c };
assert config() == 6;
assert config(10) == 15;
assert config(10, 20) == 33;
assert config(10, 20, 30) == 60;

// Test: Default with expression
var defaultExpr = fn(x: 1 + 2) { x };
assert defaultExpr() == 3;
assert defaultExpr(10) == 10;

